<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:background="@drawable/kakashi"
    android:weightSum="8"
    >
    <LinearLayout
        android:layout_weight="6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textColor="#A8A6A6"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:id="@+id/tvKQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="40sp">
        </TextView>
    </LinearLayout>

    <TableLayout
        android:id="@+id/Table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/BtnCE"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="DEL"
                android:textSize="20sp"
                ></Button>
            <Button
                android:id="@+id/BtnAC"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="20sp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/so7"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/so8"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/so9"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/Dauchia"
                android:layout_weight="1"
                android:text="/"
                android:textSize="20sp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/so4"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/so5"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/so6"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/DauNhan"
                android:layout_weight="1"
                android:text="*"
                android:textSize="20sp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/so1"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/so2"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/so3"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/DauTru"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20sp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="4"
            >


            <Button
                android:id="@+id/so0"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:layout_span="2"
                ></Button>

            <Button
                android:id="@+id/DauBang"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/DauCong"
                android:layout_weight="1"
                android:text="+"
                android:textSize="20sp"></Button>
        </TableRow>
    </TableLayout>

</LinearLayout>